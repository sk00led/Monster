public class Weapon {
    //  - name : String
    private String name = "";
    //  - maxDamage : int
    private int maxDamage = 1;
        
    //  + Weapon() <<default constructor>>
    public Weapon() {
         name = "Pointy Stick";
         maxDamage = 1;
    }
    //  + Weapon(name : String, maxDamage : int)
    public Weapon(String name, int maxDamage) {
        this.name = name;
        this.maxDamage = maxDamage;       // this. means whatever comes next is not local
    }    
    //  + getName() : String
    public String getName() {
        return this.name;
    }
    //  + setName(newName : String)
    public void setName(String newName) {
        this.name = newName;
    }
    //  + getMaxDamage() : int
    public int getMaxDamage() {
        return this.maxDamage;
    }
    //  + setMaxDamage(newMaxDamage : int)
    public void setMaxDamage(int newMaxDamage) {
        this.maxDamage = newMaxDamage;
    }
}
